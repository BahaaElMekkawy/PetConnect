@model RegisterDTO
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create an Account</h2>
            <p class="text-muted text-center mb-4">Please select your role to register as a doctor or a regular user.</p>

            <form method="post" asp-action="RegisterPost">
                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Select Role</label>
                    <select asp-for="Role" class="form-select">
                        <option value="" disabled selected>-- Select a role --</option>
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success">Continue</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <span class="text-muted">Already have an account?</span>
                <a asp-action="SignIn" asp-controller="User" class="ms-2 text-decoration-none fw-semibold text-primary">
                    Sign In
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
