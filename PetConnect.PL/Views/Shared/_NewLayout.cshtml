<body class="starter-page-page">
    <!-- ======= Header ======= -->
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">
            <a asp-action="Index" asp-controller="Home"
               class="logo d-flex align-items-center me-auto me-xl-0">
                @* <img src="~/assets/img/logo.webp" alt=""> *@
                <h1 class="sitename">PetConnect</h1><span>.</span>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><a asp-action="Index" asp-controller="Home">About</a></li>
                    <li><a asp-action="Index" asp-controller="Home">Services</a></li>

                    <li><a asp-action="Index" asp-controller="Doctors">Doctors</a></li>

                    <li class="dropdown">
                        <a asp-action="Index" asp-controller="Pets">
                            <span>Pets</span>
                            <i class="bi bi-chevron-down toggle-dropdown"></i>
                        </a>
                        <ul>
                            <li><a asp-action="Index" asp-controller="Pets">Dogs</a></li>
                            <li><a asp-action="Index" asp-controller="Pets">Cats</a></li>
                            <li><a asp-action="Index" asp-controller="Pets">Birds</a></li>
                        </ul>
                    </li>

                    <li><a asp-action="Index" asp-controller="Contact">Contact</a></li>

                    <!-- Mobile buttons -->
                    <div class="btns d-block d-xl-none">
                        <a class="btn-getstarted m-2" href="#about">Login</a>
                        <a class="btn-getstarted m-2" href="#about">Register</a>
                    </div>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <!-- Desktop buttons -->
            <div class="btns d-none d-xl-block">
                <a class="btn-getstarted" href="#about">Login</a>
                <a class="btn-getstarted" href="#about">Register</a>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- ======= Main content ======= -->
    @RenderBody()
    <!-- =========================== -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer light-background">
        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6 footer-about">
                    <a asp-action="Index" asp-controller="Home"
                       class="logo d-flex align-items-center">
                        <img src="~/assets/img/pets/logo-100.png"
                             alt="logo"
                             asp-append-version="true" />
                        <span class="sitename">PetConnect</span>
                    </a>

                    <div class="footer-contact pt-3">
                        <p>ITI ‑ .NET track</p>
                        <p>Zagazig University branch</p>
                        <p class="mt-3"><strong>Phone:</strong> <span>+1 5589 55488 55</span></p>
                        <p><strong>Email:</strong> <span>info@example.com</span></p>
                    </div>

                    <div class="social-links d-flex mt-4">
                        <a href="#"><i class="bi bi-twitter-x"></i></a>
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">About us</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Terms of service</a></li>
                        <li><a href="#">Privacy policy</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Our Services</h4>
                    <ul>
                        <li><a href="#">Web Design</a></li>
                        <li><a href="#">Web Development</a></li>
                        <li><a href="#">Product Management</a></li>
                        <li><a href="#">Marketing</a></li>
                        <li><a href="#">Graphic Design</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Hic solutasetp</h4>
                    <ul>
                        <li><a href="#">Molestiae accusamus iure</a></li>
                        <li><a href="#">Excepturi dignissimos</a></li>
                        <li><a href="#">Suscipit distinctio</a></li>
                        <li><a href="#">Dilecta</a></li>
