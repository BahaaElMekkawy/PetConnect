@model IEnumerable<PetDataDto>
@using PetConnect.BLL.Services.DTO.PetDto
@using PetConnect.DAL.Data.Enums

<div class="container mt-5">
    <div class="row">

        @foreach (var pet in Model)
        {
                <div class="col-md-6 col-lg-3 aos-init aos-animate mb-4" data-aos="zoom-in" data-aos-delay="100">
                    <div class="team-card text-center shadow rounded-3 p-2 border">
                        <div class="team-image mb-2">
                            <img src="~/assets/PetImages/@pet.ImgUrl" class="img-fluid rounded-3" alt="@pet.Name" />
                        </div>
                        <div class="team-content pet-info">
                            <h4 class="mb-1">@pet.Name</h4>
                            <span class="d-block text-muted mb-1">Status: <strong>@pet.Status</strong></span>
                          

                            <div class="mt-3 d-flex justify-content-center gap-2">
                                <a asp-action="PetDetails" asp-controller="Pet" asp-route-id="@pet.Id"
                                   class="btn btn-outline-primary btn-sm">Learn More</a>
                                <a asp-action="Adopt" asp-controller="Pets" asp-route-id="@pet.Id"
                                   class="btn btn-primary btn-sm">Adopt Now</a>
                            </div>
                        </div>
                    </div>
                </div>
        }

    </div>
</div>
