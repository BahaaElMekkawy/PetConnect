
@model IEnumerable<GPetBreadDto>

@{
    ViewData["Title"] = "Pet Breeds";
}

<main class="main py-5">
    <div class="container">
        <!-- Header and Add Button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0 text-primary fw-bold">
                <i class="bi bi-diagram-3-fill me-2"></i> @ViewData["Title"]
            </h2>

            <!-- Add New Breed Button -->
            <a asp-action="Add"
               asp-controller="PetBread"
               class="btn btn-outline-success d-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i> Add Breed
            </a>
        </div>

        <!-- Breed Cards -->
        <div class="row g-4">
            @foreach (var breed in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title text-center flex-grow-1">
                                @breed.Name
                            </h5>

                            <p class="text-center text-muted mb-2">
                                Category Name : <span class="fw-semibold">@breed.CategoryName</span>
                            </p>

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a asp-action="EditDelete"
                                   asp-controller="PetBread"
                                   asp-route-id="@breed.Id"
                                   class="btn btn-outline-primary w-100">
                                    <i class="bi bi-pencil-square me-1"></i> Edit / Delete
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
