
@model IEnumerable<GPetBreadDto>

@{
    ViewData["Title"] = "Pet Breeds";
    SelectList selectListItems = new SelectList(ViewBag.Categories, "Id", "Name");
}




<main class="main ">



    <section id="hero" class="hero section pb-5 mb-5">
        <div class="container section-title aos-init aos-animate pb-0" data-aos="fade-up">
            <h2>Manage Pet Breeds</h2>
            <p>Manage Pet Breeds</p>

            <div class="mt-3 d-flex justify-content-center gap-3">
                <a asp-controller="pet" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    All Pets
                </a>
                <a asp-action="Add"
                   asp-controller="PetBread"
                   class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-lg"></i> Add Breed
                </a>
            </div>



        </div>
    </section>






    <div class="container pb-5">

        <div class="mb-4">
            <label for="categorySelect" class="form-label fw-semibold">Filter by Category</label>
            <select id="categorySelect" class="form-select rounded-4 shadow-sm" asp-items="selectListItems">
                <option value="">Select Category</option>
            </select>
        </div>
        @* <div class="alert alert-info d-flex justify-content-between align-items-center shadow-sm rounded-4 mb-5"> *@
        @*     <div class="fs-5"> *@
        @*         Total Pet Categories *@
        @*     </div> *@
        @*     <span class="badge bg-primary fs-5 px-3 py-2"> *@
        @*         @Model.CategoriesCount *@
        @*     </span> *@
        @* </div> *@


        <div class="row g-4">
 

            @foreach (var breed in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title text-center flex-grow-1">
                                @breed.Name
                            </h5>

                            <p class="text-center text-muted mb-2">

                                Category Name : <span class="fw-semibold">@breed.CategoryName</span>



                            </p>

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a asp-action="EditDelete"
                                   asp-controller="PetBread"
                                   asp-route-id="@breed.Id"
                                   class="btn btn-outline-primary w-100">
                                    <i class="bi bi-pencil-square me-1"></i> Edit / Delete
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const categoryList = document.getElementById('categorySelect');
        const breedContainer = document.querySelector('.row.g-4');

        categoryList.addEventListener('change', function () {
            const categoryId = this.value;

    
            if (!categoryId) {
                location.reload(); 
                return;
            }

            fetch(`/PetBread/GetBreadsByCategory?id=${categoryId}`)
                .then(response => response.json())
                .then(data => {
                  
                    breedContainer.innerHTML = '';


                    data.forEach(breed => {
                        const col = document.createElement('div');
                        col.className = 'col-12 col-md-6 col-lg-4';
                        col.innerHTML = `
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-center flex-grow-1">${breed.name}</h5>
                                    <p class="text-center text-muted mb-2">
                                        Category Name: <span class="fw-semibold">${breed.categoryName}</span>
                                    </p>
                                    <div class="d-flex justify-content-center gap-2 mt-3">
                                        <a href="/PetBread/EditDelete/${breed.id}" class="btn btn-outline-primary w-100">
                                            <i class="bi bi-pencil-square me-1"></i> Edit / Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        `;
                        breedContainer.appendChild(col);
                    });
                });
        });
    });
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
