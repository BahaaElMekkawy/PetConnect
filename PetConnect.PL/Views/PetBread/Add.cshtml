@model AddPetBreadViewModel

@{
    ViewData["Title"] = "Add New Pet Breed";
}

<main class="main py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <h2 class="text-center mb-4 text-success">
                            <i class="bi bi-plus-circle me-2"></i> @ViewData["Title"]
                        </h2>

                        <form asp-action="Add"
                              asp-controller="PetBread"
                              method="post"
                              class="needs-validation">

                            <div class="mb-3">
                                <label asp-for="PetBreadDto.Name" class="form-label"></label>
                                <input asp-for="PetBreadDto.Name" class="form-control" placeholder="Enter breed name" />
                                <span asp-validation-for="PetBreadDto.Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PetBreadDto.CategoryId" class="form-label"></label>
                                <select asp-for="PetBreadDto.CategoryId" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in Model.GPetCategoryDtos)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="PetBreadDto.CategoryId" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-1"></i> Add Breed
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
