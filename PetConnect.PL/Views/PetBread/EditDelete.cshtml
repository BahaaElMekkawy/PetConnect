@model UpdatePetBreadViewModel

@{
    ViewData["Title"] = "Edit or Delete Pet Breed";
}

<main class="main ">
    <div class="container">



        <section id="hero" class="hero section pb-3 ">
            <div class="container section-title aos-init aos-animate pb-0" data-aos="fade-up">
                <h2>Edit Breed</h2>
                <p>Find your new best friend and give a rescued pet a loving home.</p>

                <div class="mt-3 d-flex justify-content-center gap-3">
                    <a asp-controller="pet" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        All Pets
                    </a>
                    <a asp-controller="petbread" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        All Breeds
                    </a>
                </div>



            </div>
        </section>


        <div class="row justify-content-center  pb-3 mb-3">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                       

                        <!-- ======= Edit Form ======= -->
                        <form asp-controller="PetBread"
                              asp-action="Edit"
                              method="post"
                              class="needs-validation">

                            <!-- ✅ Hidden input for Id -->
                            <input type="hidden" asp-for="UPetBreadDto.Id" />

                            <div class="mb-3">
                                <label asp-for="UPetBreadDto.Name" class="form-label"></label>
                                <input asp-for="UPetBreadDto.Name" class="form-control" placeholder="Enter breed name" />
                                <span asp-validation-for="UPetBreadDto.Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UPetBreadDto.CategoryId" class="form-label"></label>
                                <select asp-for="UPetBreadDto.CategoryId" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in Model.GPetCategoryDtos)
                                    {
                                        <option value="@category.Id"
                                                selected="@(category.Id == Model.UPetBreadDto.CategoryId)">
                                            @category.Name
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="UPetBreadDto.CategoryId" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-save me-1"></i> Update
                            </button>
                        </form>

                        <hr class="my-4" />

                        <!-- ======= Delete Form ======= -->
                        <form asp-controller="PetBread"
                              asp-action="Delete"
                              method="post"
                              asp-route-id="@Model.UPetBreadDto.Id"  >


                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
