@model UpdatePetBreadViewModel

@{
    ViewData["Title"] = "Edit or Delete Pet Breed";
}

<main class="main py-5">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <h2 class="text-center mb-4 text-primary">
                            <i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]
                        </h2>

                        <!-- ======= Edit Form ======= -->
                        <form asp-controller="PetBread"
                              asp-action="Edit"
                              method="post"
                              class="needs-validation">

                            <!-- ✅ Hidden input for Id -->
                            <input type="hidden" asp-for="UPetBreadDto.Id" />

                            <div class="mb-3">
                                <label asp-for="UPetBreadDto.Name" class="form-label"></label>
                                <input asp-for="UPetBreadDto.Name" class="form-control" placeholder="Enter breed name" />
                                <span asp-validation-for="UPetBreadDto.Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UPetBreadDto.CategoryId" class="form-label"></label>
                                <select asp-for="UPetBreadDto.CategoryId" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in Model.GPetCategoryDtos)
                                    {
                                        <option value="@category.Id"
                                                selected="@(category.Id == Model.UPetBreadDto.CategoryId)">
                                            @category.Name
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="UPetBreadDto.CategoryId" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-save me-1"></i> Update
                            </button>
                        </form>

                        <hr class="my-4" />

                        <!-- ======= Delete Form ======= -->
                        <form asp-controller="PetBread"
                              asp-action="Delete"
                              method="post"
                              asp-route-id="@Model.UPetBreadDto.Id"  >


                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
