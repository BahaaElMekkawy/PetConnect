@model UPetBreadDto

@{
    ViewData["Title"] = "Edit or Delete Pet Breed";
}

<main class="main py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <h2 class="text-center mb-4 text-primary">
                            <i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]
                        </h2>

                        <!-- ======= Edit Form ======= -->
                        <form asp-controller="PetBread"
                              asp-action="Edit"
                              asp-route-id="@Model.Id"
                              method="post"
                              class="needs-validation">

                 

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter breed name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <input asp-for="CategoryId" class="form-control" placeholder="Enter category ID" />
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-save me-1"></i> Update
                            </button>
                        </form>

                        <hr class="my-4" />

                        <!-- ======= Delete Form ======= -->
                        <form asp-controller="PetBread"
                              asp-action="Delete"
                              asp-route-id="@Model.Id"
                              method="post">

                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i> Delete 
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
