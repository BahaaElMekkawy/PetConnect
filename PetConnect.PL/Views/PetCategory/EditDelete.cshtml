@model GPetCategoryDto

@{
    ViewData["Title"] = "Edit Or Delete Pet Category";
}

<main class="main ">
    <div class="container">



        <section id="hero" class="hero section pb-5 ">
            <div class="container section-title aos-init aos-animate pb-0" data-aos="fade-up">
                <h2>Manage Cetegory</h2>
                <p>Find your new best friend and give a rescued pet a loving home.</p>

                <div class="mt-3 d-flex justify-content-center gap-3">
                    <a asp-controller="pet" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        All Pets
                    </a>
                    <a asp-controller="petcategory" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        All Categories
                    </a>
                </div>



            </div>
        </section>




        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">

                        <!-- =======  Edit Form  ======= -->
                        <form asp-controller="PetCategory"
                              asp-action="Edit"
                              asp-route-id="@Model.Id"
                              method="post"
                              class="needs-validation">


                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name"
                                       class="form-control"
                                       placeholder="Category name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </button>
                        </form>

                        <hr class="my-4" />

                        <!-- =======  Delete Form  ======= -->
                        <form asp-controller="PetCategory"
                              asp-action="Delete"
                              asp-route-id="@Model.Id"
                              method="post">

             

                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
