@model AddedPetCategoryDTO

@{
    ViewData["Title"] = "Add Pet Category";
}

<main class="main ">
    <div class="container">



        <section id="hero" class="hero section pb-5 ">
            <div class="container section-title aos-init aos-animate pb-0" data-aos="fade-up">
                <h2>All Cetegory</h2>
                <p>Find your new best friend and give a rescued pet a loving home.</p>

                <div class="mt-3 d-flex justify-content-center gap-3">
                    <a asp-controller="pet" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        All Pets
                    </a>
                    <a asp-controller="petcategory" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        All Categories
                    </a>
                </div>



            </div>
        </section>






        <div class="row justify-content-center mb-5">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">

                        <form asp-action="Add"
                              asp-controller="PetCategory"
                              method="post"
                              class="needs-validation"
                              novalidate>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Category name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
