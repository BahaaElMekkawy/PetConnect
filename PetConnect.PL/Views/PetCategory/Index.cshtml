
@model StatisticsGPetCategoryDto

@{
    ViewData["Title"] = "Pet Categories";
}

<main class="main py-5">
    <div class="container">


        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0 text-primary fw-bold">
                <i class="bi bi-folder2-open me-2"></i> @ViewData["Title"]
            </h2>

        
            <a asp-action="Add"
               asp-controller="PetCategory"
               class="btn btn-outline-success d-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i> Add Category
            </a>
        </div>

       
        <div class="alert alert-info d-flex justify-content-between align-items-center shadow-sm rounded-4 mb-5">
            <div class="fs-5">
                Total Pet Categories
            </div>
            <span class="badge bg-primary fs-5 px-3 py-2">
                @Model.CategoriesCount
            </span>
        </div>

      
        <div class="row g-4">
            @foreach (var cat in Model.GPetCategoryDto)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title text-center flex-grow-1">
                                @cat.Name
                            </h5>

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <!-- Update Or Delete -->
                                <a asp-action="EditDelete"
                                   asp-controller="PetCategory"
                                   asp-route-id="@cat.Id"
                                   class="btn btn-outline-primary w-100">
                                    <i class="bi bi-pencil-square me-1"></i> Edit Or Delete
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
